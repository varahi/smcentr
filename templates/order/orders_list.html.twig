{% extends 'layouts/base.html.twig' %}
{% block title %}{{ 'Welcome'|trans }} {{ user.fullName }}{% endblock %}
{% block body %}

    <header id="sticky_header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    {% include 'partials/navigation/_navbar.html.twig' %}
                </div>
            </div>
        </div>
    </header>

    <section id="list_jobs">
        <div class="container">
            {% include 'partials/_message.html.twig' %}
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'Orders list'|trans }}</h1>
                </div>
            </div>
        </div>
    </section>

    <section id="list_items">
        <div class="container">
            <div class="row">
                {% for order in orders %}
                    {% include 'partials/order/_list_order_item.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </section>
    {% include 'partials/footer/_footer.html.twig' %}
{% endblock %}