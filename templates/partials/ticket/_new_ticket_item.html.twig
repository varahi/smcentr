<div class="col-md-4">
    <div class="job_item">

        <div class="top_item">
            <div class="item_left">
                <h2>{{ ticket.title }}</h2>
                {#<div class="raion">
                    {{ ticket.description }}
                </div>#}
            </div>
            <div class="item_right">
                <div class="id_item">
                    ID {{ ticket.id }}
                </div>
                <div class="raiting">
                    <p>{{ 'Priority'|trans }}</p>
                    {% include 'partials/ticket/_ticket_stars.html.twig' %}
                </div>
                {% if ticket.status == 0 %}
                    <div class="status">
                        {{ 'New order'|trans }}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="description">
            {{ ticket.description }}
        </div>
    </div>
</div>