<div class="notification">
    <div class="status">
        <a href="#" title="Отметить как прочитанное">
            <img src="{{ asset('assets/images/notif_status_new.svg') }}">
        </a>
    </div>
    <div class="date">{{ notification.created|date("H:i d.m.Y") }}</div>


    {% if notification.type == 1 %}
        <div class="title">{{ notification.message }} <a href="{{ path('app_orders_list') }}#{{ notification.id }}">ID {{ notification.id }}</a>.</div>
        <div class="desc"><a href="{{ path('app_orders_list') }}">Вы можете ознакомиться с заявкой</a></div>
    {% endif %}
    {% if notification.type == 2 or notification.type == 3 %}
        <div class="title">{{ notification.message }} <a href="{{ path('app_orders_list') }}#{{ notification.id }}">ID {{ notification.id }}</a>.</div>
        <div class="desc"><a href="{{ path('app_master_profile') }}">Баланс вы можете посмотреть на странице профиля</a></div>
    {% endif %}
    {% if notification.type == 4 %}
        <div class="title">{{ notification.message }} <a href="{{ path('app_orders_list') }}#{{ notification.id }}">ID {{ notification.id }}</a>.</div>
        <div class="desc"><a href="{{ path('app_orders_list') }}">Вы можете ознакомиться с заявкой</a></div>
    {% endif %}
</div>