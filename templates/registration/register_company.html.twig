{% extends 'layouts/login.html.twig' %}
{% block title %}{{ 'Company registration'|trans }}{% endblock %}
{% block body %}

    <section id="reg_client">
        <div class="container">
            {% include 'partials/_message.html.twig' %}
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'Company registration'|trans }}</h1>
                </div>
            </div>

            <section>
                <div class="container">
                    <div class="row">
                        <div class="md-6" style="margin-right: 30px">
                            <div class="btn_profile_edit">
                                <a href="{{ path('app_backend') }}"><button>{{ 'To admin panel'|trans }}</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div class="row">
                <div class="col-md-12"></div>
                {{ form_start(registrationForm, {'attr' : {'class': 'form-std company_form', 'autocomplete': 'off'}} ) }}
                <div class="col-md-12">
                    <div class="reg_contact reg_company">
                        <h3>{{ 'Account'|trans }}</h3>
                        {{ form_row(registrationForm.fullName) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, { label: 'Пароль'}) }}

                        <h3>{{ 'Contact info'|trans }}</h3>
                        {{ form_row(registrationForm.city) }}
                        {{ form_row(registrationForm.responsiblePersonFullName) }}
                        {{ form_row(registrationForm.responsiblePersonPhone) }}
                        {{ form_row(registrationForm.responsiblePersonEmail) }}

                        {#<h3>{{ 'Additional Info'|trans }}</h3>
                        {{ form_row(registrationForm.companyMasters) }}
                        {{ form_row(registrationForm.companyClients) }}#}

                        <h3>{{ 'Balance'|trans }}</h3>
                        {{ form_row(registrationForm.taxRate) }}
                        {{ form_row(registrationForm.serviceTaxRate) }}

{#                        {{ form_widget(registrationForm.district) }}#}
{#                        {{ form_row(registrationForm.balance) }}#}

                        <h3>{{ 'Bank'|trans }}</h3>
                        {{ form_row(registrationForm.inn) }}
                        {{ form_row(registrationForm.ogrn) }}
                        {{ form_row(registrationForm.bank) }}
                        {{ form_row(registrationForm.checkingAccount) }}
                        {{ form_row(registrationForm.cardNumber) }}
                        {{ form_row(registrationForm.cardFullName) }}

                        <h3>{{ 'Company avatar'|trans }}</h3>

                        <div class="avatar_upload">
                            <img id="avatar" src="{{ asset('assets/images/avatar.png') }}" alt="" />
                            <div class="">
                                <p>{{ 'Company avatar'|trans }}</p>
                                <div class="upload_file">
                                    {{ form_widget(registrationForm.avatar) }}
                                    <button class="upload">{{ 'Upload'|trans }}<i></i></button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {% include 'partials/footer/_registration_footer2.html.twig' %}
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </section>
    <script>
        $(function(){
            $("#registration_company_form_phone").mask("+7(999) 999-9999");
            $("#registration_company_form_responsiblePersonPhone").mask("+7(999) 999-9999");
        });
        // Remove avatar image upload
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#avatar')
                        .attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
        // Hover on upload button
        $( ".upload_file" ).hover(
            function() {
                $( ".upload" ).addClass( 'hover');
            }, function() {
                $( ".upload" ).removeClass( 'hover');
            }
        );
    </script>
{% endblock %}
