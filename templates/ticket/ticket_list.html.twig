{% extends 'layouts/base.html.twig' %}
{% block title %}{{ 'Welcome'|trans }}{% endblock %}
{% block body %}

    <link rel='stylesheet' href='https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css'>
    <section id="list_jobs">
        <div class="container">
            {% include 'partials/_message.html.twig' %}
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'Support'|trans }}</h1>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="md-6" style="margin-right: 30px">
                    <div class="btn_profile_edit">
                        <a href="{{ path('app_backend') }}"><button>{{ 'To admin panel'|trans }}</button></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

     <section id="list_items">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3>{{ 'New tickets'|trans }}</h3>
                </div>
            </div>
            {% if newTickets is not empty %}
                {% include 'partials/ticket/_list_table.html.twig' with {'tickets': newTickets, 'id': 'new-tickets'} %}
            {% else %}
                <p>{{ 'Empty orders list'|trans }}</p>
            {% endif %}
        </div>

         <div class="container">
             <div class="row">
                 <div class="col-md-12">
                     <h3>{{ 'Active tickets'|trans }}</h3>
                 </div>
             </div>
             {% if activeTickets is not empty %}
                 {% include 'partials/ticket/_list_table.html.twig' with {'tickets': activeTickets, 'id': 'active-tickets'} %}
             {% else %}
                 <p>{{ 'Empty orders list'|trans }}</p>
             {% endif %}
         </div>

         <div class="container">
             <div class="row">
                 <div class="col-md-12">
                     <h3>{{ 'Completed tickets'|trans }}</h3>
                 </div>
             </div>
             {% if completedTickets is not empty %}
                 {% include 'partials/ticket/_list_table.html.twig' with {'tickets': completedTickets, 'id': 'completed-tickets'} %}
             {% else %}
                 <p>{{ 'Empty orders list'|trans }}</p>
             {% endif %}
         </div>

    </section>

    {% include 'partials/footer/_footer.html.twig' %}
    <script src='https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js'></script>
    <script>
        $(document).ready(function() {
            $("#new-tickets").DataTable({
                "paging": false,
                "info": false,
                "searching": false
            });
            $("#active-tickets").DataTable({
                "paging": false,
                "info": false,
                "searching": false
            });
            $("#completed-tickets").DataTable({
                "paging": false,
                "info": false,
                "searching": false
            });
        });
    </script>
{% endblock %}

