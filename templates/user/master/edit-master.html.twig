        // Hover on upload button
        $( ".upload_file_1" ).hover(
            function() {
                $( ".upload-1" ).addClass( 'hover');
            }, function() {
                $( ".upload-1" ).removeClass( 'hover');
            }
        );
        $( ".upload_file_2" ).hover(
            function() {
                $( ".upload-2" ).addClass( 'hover');
            }, function() {
                $( ".upload-2" ).removeClass( 'hover');
            }
        );
        $( ".upload_file_3" ).hover(
            function() {
                $( ".upload-3" ).addClass( 'hover');
            }, function() {
                $( ".upload-3" ).removeClass( 'hover');
            }
        );
        $( ".upload_file_4" ).hover(
            function() {
                $( ".upload-4" ).addClass( 'hover');
            }, function() {
                $( ".upload-4" ).removeClass( 'hover');
            }
        );

        $("#registration_master_form_professions_1").click(function(){
            $(".prof_1").toggle(100);
        });
        $("#registration_master_form_professions_2").click(function(){
            $(".prof_2").toggle(100);
        });
        $("#registration_master_form_professions_3").click(function(){
            $(".prof_3").toggle(100);
        });
    </script>

{% endblock %}