        if ($('#master_profile_form_professions_1').is(':checked')) {
            $( ".prof_1" ).addClass( 'show');
        }
        if ($('#master_profile_form_professions_2').is(':checked')) {
            $( ".prof_2" ).addClass( 'show');
        }
        if ($('#master_profile_form_professions_3').is(':checked')) {
            $( ".prof_3" ).addClass( 'show');
        }

        $("#master_profile_form_professions_1").click(function(){
            $(".prof_1").toggle(100);
        });
        $("#master_profile_form_professions_2").click(function(){
            $(".prof_2").toggle(100);
        });
        $("#master_profile_form_professions_3").click(function(){
